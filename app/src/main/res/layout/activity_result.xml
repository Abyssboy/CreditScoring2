<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#ffffff"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.poomer555gmail.creditscoring.Result">


    <TextView
        android:id="@+id/Re"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="54dp"
        android:gravity="center"
        android:text="TextView"
        android:textSize="40dp" />


    <TextView
        android:id="@+id/five"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linearLayout2"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:gravity="center"
        android:text="Condition"
        android:textSize="20dp" />

    <Button
        android:id="@+id/BackBut"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:text="กลับสู่หน้าเเรก" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/Re"
        android:layout_marginBottom="30dp"
        android:layout_marginTop="23dp"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/one"
            android:layout_width="68dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/Re"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="38dp"
            android:layout_weight="1"
            android:text="Character"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/three"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/one"
            android:gravity="right"
            android:layout_alignStart="@+id/one"
            android:layout_below="@+id/one"
            android:layout_marginTop="38dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:textSize="20dp"
            android:text="Capital" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/linearLayout"
        android:orientation="horizontal"
        android:layout_marginBottom="20dp"
        android:id="@+id/linearLayout2">

        <TextView
            android:id="@+id/two"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/three"
            android:layout_alignLeft="@+id/four"
            android:layout_alignStart="@+id/four"
            android:layout_marginBottom="30dp"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:text="Capacity"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/four"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/five"
            android:layout_marginRight="10dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"

            android:layout_weight="1"

            android:gravity="right"
            android:text="Collateral"
            android:textSize="20dp" />
    </LinearLayout>


</RelativeLayout>
